<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:paddingStart="50dp"
    android:paddingEnd="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/message_container"
        app:cardElevation="0dp"
        app:layout_constraintHorizontal_bias="1"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="100"
            android:layout_gravity="end"
            android:id="@+id/my_message_text"
            android:fontFamily="@font/product_sans_regular"
            android:textColor="@color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="asdjasdasjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjasdasdasdasdasdasdassssssssssssssssssssssssssssssjjjjjjjjjjjjasdsadsadsadasdasdasdasdasdasdasdasdasdsadjjjjjjjjjjjjjjjjjjjj"/>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>